{
  "parser": "babel-eslint",
  "plugins": [ "prettier", "flowtype" ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off",
    "prettier/prettier": [ "warn", { "singleQuote": true, "semi": false, "trailingComma": "all" } ]
  }
}